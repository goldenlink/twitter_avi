<li class="micropost">

<!-- Delete link -->
<% if current_user?(micropost.user) %>
<div class="delete">
  <%= link_to "delete", micropost, :method => :delete, 
  :confirm => "You sure?", 
  :title => micropost.content %>
</div>
<% end %>

<!-- Author link for a reply post -->
  <%= link_to micropost.author,
      { :controller => "users", :action => "show", :id => micropost.user } unless micropost.reply? %>

<!-- Post content -->
  <span class="content"><%= wrap(micropost.content) %></span></br>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>

<!-- Replies -->
  <% unless micropost.replies.empty? %>
  <ul>
  <%= render micropost.replies %>
  </ul>
  <% end %>

</li>
